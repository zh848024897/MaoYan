<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_gallery"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/gridview" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/iv_gallery"
        android:layout_alignRight="@id/iv_gallery"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/a5b" />

    <TextView
        android:layout_alignLeft="@id/iv_gallery"
        android:layout_alignBottom="@id/iv_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:maxEms="7"
        android:textSize="12sp"
        android:text="泰山归来:险战丛林人缘激战预告片" />

</RelativeLayout>