<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_gallery_second"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ame" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/iv_gallery_second"
        android:layout_alignTop="@id/iv_gallery_second"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/xihuan_cang" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_gallery_second"
        android:layout_below="@id/iv_gallery_second"
        android:layout_marginTop="8dp"
        android:text="致青春"
        android:textSize="12sp" />

    <TextView
        android:layout_below="@id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_gallery_second"
        android:layout_marginTop="3dp"
        android:text="100人想看"
        android:textSize="9sp" />
</RelativeLayout>